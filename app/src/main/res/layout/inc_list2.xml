<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_list_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <LinearLayout
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:gravity="top">
        <TextView
            android:id="@+id/adapter_list_uploc"
            style="@style/userText07"
            android:textStyle="bold"
            android:textSize="21dp"
            android:text="인천 서구 가좌동"
            android:ellipsize="marquee"
            android:layout_weight="45"
            android:layout_width="0dp"
            android:layout_height="25dp" />
        <ImageView
            android:id="@+id/adapter_list_routecar"
            android:src="@drawable/ico_routecar"
            android:scaleType="fitCenter"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="10"
            android:layout_marginTop="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/adapter_list_downloc"
            style="@style/userText07"
            android:textStyle="bold"
            android:gravity="right"
            android:textSize="21dp"
            android:text="부산 해운대구 반여동"
            android:ellipsize="marquee"
            android:layout_weight="45"
            android:layout_width="0dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/adapter_list_upstatus"
                android:background="@drawable/rbox_type2_1"
                android:textSize="12dp"
                android:text="@string/list_status1"
                android:textColor="@color/colorListPay1"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/adapter_list_uptime"
                style="@style/userText09"
                android:text="05:00"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adapter_list_km"
                style="@style/userText10"
                android:text="165km"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/adapter_list_downtime"
                style="@style/userText09"
                android:text="17:00"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adapter_list_downstatus"
                android:background="@drawable/rbox_type2_1"
                android:textSize="12dp"
                android:text="@string/list_dstatus1"
                android:textColor="@color/colorListPay1"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="22dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/adapter_list_mixup"
            android:background="@drawable/rbox_type2_4"
            android:textSize="12dp"
            android:text="@string/list_mixup"
            android:textColor="@color/colorListMixup"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/adapter_list_carsize"
            style="@style/userText11"
            android:text="5톤플러스"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adapter_list_cartype"
            style="@style/userText11"
            android:text="카고/윙바디"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/adapter_list_etc"
            style="@style/userText10"
            android:textSize="16dp"
            android:text="마데압축 계근 당착"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/adapter_list_paytype"
                android:background="@drawable/rbox_type3_6"
                android:textSize="14dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/list_pay6"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:minWidth="40dp"
                android:minHeight="22dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/adapter_list_pay"
                style="@style/userText08"
                android:layout_marginTop="2dp"
                android:textSize="21dp"
                android:text="360,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>