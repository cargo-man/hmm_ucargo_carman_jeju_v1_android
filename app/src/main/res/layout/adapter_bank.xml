<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@drawable/line1_1"
    android:padding="10dp"
    android:weightSum="10"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/adapter_bank_status"
        style="@style/userText17"
        android:paddingLeft="5dp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:textSize="14dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/mybank_status2"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adapter_bank_date"
            style="@style/userText17"
            android:textColor="@color/colorUser4"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2018.01.01 16:00"/>
        <TextView
            android:id="@+id/adapter_bank_info"
            style="@style/userText17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="김철수 회원님으로 부터 이체"/>
    </LinearLayout>
    <TextView
        android:id="@+id/adapter_bank_point"
        style="@style/userText17"
        android:paddingRight="5dp"
        android:textSize="14dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:text="30,000 원"/>
</LinearLayout>