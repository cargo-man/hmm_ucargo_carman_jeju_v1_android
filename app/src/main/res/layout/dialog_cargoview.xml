<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUser7">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/box_type1_3">
        <TextView
            android:id="@+id/popup_title"
            style="@style/userText02"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/title_popupcargo"
            android:background="@drawable/line1_1"
            android:textColor="@color/colorUser2"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/fragment_cargo2" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="5">
            <Button
                android:id="@+id/popup_close"
                android:stateListAnimator="@null"
                style="@style/userButton13"
                android:text="@string/listview_close"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/popup_send"
                android:stateListAnimator="@null"
                style="@style/userButton12"
                android:text="@string/listview_send"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>