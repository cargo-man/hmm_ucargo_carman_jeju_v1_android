<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/adapter_mainboard_box"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <TextView
                android:visibility="gone"
                android:id="@+id/adapter_mainboard_type"
                android:background="@drawable/rbox_type2_2"
                android:textSize="12dp"
                android:text="@string/boardk_type1"
                android:textColor="@color/colorListPay2"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="22dp" />
            <TextView
                android:id="@+id/adapter_mainboard_text"
                style="@style/userText18"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="공지사항 공지사항 공지사항공지사항 공지사항 공지사항공지사항 공지사항 공지사항"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/adapter_mainboard_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ico_mor_g"
            android:scaleType="fitCenter"
            android:layout_width="7dp"
            android:layout_height="12dp" />
    </RelativeLayout>
</LinearLayout>