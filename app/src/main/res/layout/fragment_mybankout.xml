<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUser17"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include layout="@layout/inc_header" />
    <ScrollView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/box_type3_1"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/line1_1"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:padding="10dp">
                    <TextView
                        style="@style/userText01"
                        android:text="@string/mybank_outpay_title1"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_weight="70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/mybankout_bank"
                                style="@style/userText17"
                                android:textSize="14dp"
                                android:text="1234-00-00000 국민 / 길동홍"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/mybankout_yes"
                                android:textColor="@color/colorUser2"
                                android:textSize="12dp"
                                android:text="@string/mybank_outpay_info1_yes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/line1_1"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:padding="10dp">
                    <TextView
                        style="@style/userText01"
                        android:text="@string/mybank_outpay_title2"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/mybankout_maxpay"
                        style="@style/userText17"
                        android:gravity="right|center_vertical"
                        android:textSize="14dp"
                        android:text="@string/mybank_outpay_info2"
                        android:layout_weight="70"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/line1_1"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:padding="10dp">
                    <TextView
                        style="@style/userText01"
                        android:text="@string/mybank_outpay_title3"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/mybankout_usepoint"
                        style="@style/inputType4"
                        android:gravity="right|center_vertical"
                        android:textSize="14dp"
                        android:inputType="number"
                        android:hint="@string/mybank_outpay_hint3"
                        android:layout_weight="70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/line1_1"
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:padding="10dp">
                    <TextView
                        style="@style/userText01"
                        android:text="@string/mybank_outpay_title4"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/mybankout_password"
                        style="@style/inputType4"
                        android:gravity="right|center_vertical"
                        android:textSize="14dp"
                        android:inputType="textVisiblePassword"
                        android:privateImeOptions="defaultInputmode=english"
                        android:hint="@string/mybank_outpay_hint4"
                        android:layout_weight="70"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/mybankout_send"
                style="@style/userButton09"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="@string/mybank_outpay_send"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp">
                <TextView
                    android:layout_marginTop="10dp"
                    style="@style/userText17"
                    android:paddingBottom="5dp"
                    android:text="@string/mybank_outpay_step_title"
                    android:textSize="15dp"
                    android:background="@drawable/line1_4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/userText01"
                    android:textSize="13dp"
                    android:text="@string/mybank_outpay_step_text1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/userText01"
                    android:textSize="13dp"
                    android:text="@string/mybank_outpay_step_text2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/userText01"
                    android:textSize="13dp"
                    android:text="@string/mybank_outpay_step_text3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    style="@style/userText01"
                    android:textSize="13dp"
                    android:text="@string/mybank_outpay_step_text4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="20dp"
                    style="@style/userText17"
                    android:paddingBottom="5dp"
                    android:text="@string/mybank_outpay_alert_title"
                    android:textSize="15dp"
                    android:background="@drawable/line1_4"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:src="@drawable/round_type1_5"
                        android:layout_width="3dp"
                        android:layout_height="3dp" />
                    <TextView
                        android:id="@+id/mybankout_infopay1"
                        style="@style/userText01"
                        android:textSize="13dp"
                        android:text="@string/mybank_outpay_alert_text1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@drawable/round_type1_5"
                        android:layout_width="3dp"
                        android:layout_height="3dp" />
                    <TextView
                        android:id="@+id/mybankout_infopay2"
                        style="@style/userText01"
                        android:textSize="13dp"
                        android:text="@string/mybank_outpay_alert_text2"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@drawable/round_type1_5"
                        android:layout_width="3dp"
                        android:layout_height="3dp" />
                    <TextView
                        style="@style/userText01"
                        android:textSize="13dp"
                        android:text="@string/mybank_outpay_alert_text3"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>