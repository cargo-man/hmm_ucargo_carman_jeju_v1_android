<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUser7"
    android:focusable="true"
    android:focusableInTouchMode="false">
    <RelativeLayout
        android:id="@+id/address_outbox"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/box_type1_3">
        <TextView
            android:id="@+id/daysort_title"
            style="@style/userText02"
            android:textColor="@color/colorUser2"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="@drawable/line1_1"
            android:text="@string/daysort_title"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/colorUser5">
            <GridView
                android:id="@+id/daysort_gridview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorUser5"
                android:isScrollContainer="false"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth" />
        </RelativeLayout>
        <TextView
            android:id="@+id/daysort_title2"
            style="@style/userText02"
            android:layout_marginTop="110dp"
            android:textColor="@color/colorUser2"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="@drawable/line1_1"
            android:text="@string/daysort_title2"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_marginTop="155dp"
            android:layout_marginBottom="45dp"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/colorUser5">
            <GridView
                android:id="@+id/daysort_gridview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorUser5"
                android:isScrollContainer="false"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/daysort_cancle"
                style="@style/userButton13"
                android:text="@string/alert_cancle"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/daysort_ok"
                style="@style/userButton12"
                android:text="@string/alert_select"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>