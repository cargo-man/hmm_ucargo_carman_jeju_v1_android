<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorUser17">
    <include layout="@layout/inc_header" />
    <RadioGroup
        android:orientation="horizontal"
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:weightSum="2"
        android:gravity="center_vertical">
        <RadioButton
            android:id="@+id/myaddview_status1"
            style="@style/radioType10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/myaddview_status1"
            android:checked="true"
            />
        <ImageView
            android:background="@color/colorUser8"
            android:layout_width="1dp"
            android:layout_height="15dp" />
        <RadioButton
            android:id="@+id/myaddview_status2"
            style="@style/radioType10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/myaddview_status2"
            />
    </RadioGroup>
    <RelativeLayout
        android:layout_marginTop="85dp"
        android:background="@drawable/line1_1"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/myaddview_regdate"
            style="@style/userText12"
            android:textSize="17dp"
            android:text="2017.01.01. 14: 48"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/myaddview_status"
            style="@style/userText12"
            android:textSize="16dp"
            android:text="배차전"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/myaddview_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorUser1"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/myaddview_btnstep1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/myaddview_call"
                style="@style/userButton09"
                android:textSize="17dp"
                android:text="@string/myaddview_call"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/myaddview_cancle"
                style="@style/userButton10"
                android:textSize="17dp"
                android:text="@string/myaddview_cancle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>