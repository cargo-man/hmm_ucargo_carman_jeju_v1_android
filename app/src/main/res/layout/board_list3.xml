<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/board2_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/board2_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:smoothScrollbar="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:dividerHeight="0dp"
            android:divider="@color/colorUser17" />
        <RelativeLayout
            android:id="@+id/board2_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorUser17">
            <ImageView
                android:src="@drawable/ico_emptybox2"
                android:scaleType="fitXY"
                android:id="@+id/empty_icon"
                android:layout_centerInParent="true"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/board2_empty_text"
                style="@style/userText01"
                android:text="@string/list_empty"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/empty_icon"/>
            <Button
                style="@style/userButtonClear"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>