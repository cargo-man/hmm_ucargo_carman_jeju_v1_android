<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@drawable/line1_1"
    android:padding="15dp"
    android:weightSum="10">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/adapter_boardk_type"
            android:background="@drawable/rbox_type2_2"
            android:textSize="12dp"
            android:text="@string/boardk_type1"
            android:textColor="@color/colorListPay2"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="22dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/adpater_boardk_title"
            style="@style/userText17"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="테스트내용입니다."/>
        <TextView
            android:id="@+id/adpater_boardk_date"
            style="@style/userText01"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017.01.01"/>
    </LinearLayout>
</LinearLayout>