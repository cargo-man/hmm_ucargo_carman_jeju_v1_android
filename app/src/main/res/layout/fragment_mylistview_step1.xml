<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mylistview_enddist_box"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/line1_1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">
        <ImageView
            android:src="@drawable/ico_location"
            android:scaleType="fitXY"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            style="@style/userText01"
            android:textColor="@color/colorUser4"
            android:layout_marginLeft="5dp"
            android:text="@string/listview_mylocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ico_arrow"
            android:scaleType="fitXY"
            android:layout_width="8dp"
            android:layout_height="12dp" />
        <TextView
            android:id="@+id/mylistview_enddist_text"
            style="@style/userText01"
            android:textColor="@color/colorUser4"
            android:layout_marginLeft="5dp"
            android:text="@string/mylistview_enddist_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/fragment_cargo3" />
</LinearLayout>