<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- UNSELECTED -->
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/ico_radio_off" android:width="20dp" android:height="20dp"
                android:top="5dp" android:right="75dp" android:bottom="5dp" android:left="5dp" />
        </layer-list>
    </item>
    <!-- SELECTED -->
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/ico_radio_on" android:width="20dp" android:height="20dp"
                android:top="5dp" android:right="75dp" android:bottom="5dp" android:left="5dp" />
        </layer-list>
    </item>
</selector>